// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @default(autoincrement()) @id
  email     String
  firstName String
  lastName  String
  left      Int       @default(8)
  history   Workout[]
  createdAt DateTime  @default(now())
}

model Workout {
  id       Int           @default(autoincrement()) @id
  date     String
  time     String
  type     WorkoutType
  trainees User[]
  status   WorkoutStatus
  @@unique([date, time])
}

enum WorkoutType {
  PERSONAL
  TEAM
}

enum WorkoutStatus {
  Active
  Cancelled
  Over
}
