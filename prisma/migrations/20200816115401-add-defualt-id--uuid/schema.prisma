datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  firstName String
  lastName  String
  left      Int       @default(8)
  history   Workout[]
}

model Workout {
  id       String      @id @default(uuid())
  when     DateTime
  type     WorkoutType
  trainees User[]
  status   String
}

enum WorkoutType {
  PERSONAL
  TEAM
}

enum WorkoutStatus {
  Active
  Cancelled
  Over
}
